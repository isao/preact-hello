{
  "compilerOptions": {
    "target": "es2016", // 100% native support on Chrome, iOS, Edge, Safari, FF
    "module": "es2015",
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": true,
    "declarationDir": "dist/dts",
